<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Login</title>
  <link rel="stylesheet" href="/public/style.css">
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  <style>
    .mensagem-sucesso {
      padding: 10px; margin-bottom: 15px; border-radius: 5px;
      background-color: #d4edda; color: #155724; border: 1px solid #c3e6cb;
      text-align: center;
    }
    .mensagem-erro {
      padding: 10px; margin-bottom: 15px; border-radius: 5px;
      background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb;
      text-align: center;
    }
    /* NOVO ESTILO PARA INPUTS COM ERRO */
    .input-erro {
      border: 1px solid #721c24 !important;
      box-shadow: 0 0 5px rgba(215, 59, 72, 0.5);
    }
  </style>
</head>
<body>

  <% if (typeof query !== 'undefined' && query.cadastro === 'sucesso') { %>
    <p class="mensagem-sucesso">Cadastro realizado com sucesso! Faça login.</p>
  <% } %>

  <div id="mensagem-container"></div>

  <form id="login-form">
    <h2>Login</h2>
    <input type="email" id="email" name="email" placeholder="E-mail" required><br>
    <input type="password" id="password" name="password" placeholder="Senha" required><br>

    <div class="g-recaptcha" data-sitekey="6Leu9H4rAAAAAKL1I7ilFxLvpcnK0ZoWeN5R1wrP"></div><br>

    <button type="submit">Entrar</button>
    <p>Não tem conta? <a href="./register">Cadastre-se</a></p>
    <p><a href="./forgot.ejs">Esqueci minha senha</a></p>
  </form>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const loginForm = document.getElementById('login-form');
      const emailInput = document.getElementById('email');
      const passwordInput = document.getElementById('password');
      const mensagemContainer = document.getElementById('mensagem-container');

      loginForm.addEventListener('submit', async (event) => {
        // 1. Previne o recarregamento da página
        event.preventDefault();

        // Limpa erros anteriores
        limparErros();

        // 2. Coleta os dados do formulário
        const formData = new FormData(loginForm);
        const data = Object.fromEntries(formData.entries());
        data['g-recaptcha-response'] = grecaptcha.getResponse();

        try {
          // 3. Envia os dados para o servidor
          const response = await fetch('/', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(data),
          });

          const result = await response.json();

          // 4. Processa a resposta
          if (result.success) {
            // Se sucesso, redireciona para a URL informada pelo backend
            window.location.href = result.redirectUrl;
          } else {
            // Se falhar, exibe o erro
            exibirErro(result.message);
          }
        } catch (error) {
          exibirErro('Ocorreu um erro de comunicação. Tente novamente.');
        }
      });

      function exibirErro(mensagem) {
        mensagemContainer.innerHTML = `<p class="mensagem-erro">${mensagem}</p>`;
        emailInput.classList.add('input-erro');
        passwordInput.classList.add('input-erro');
        grecaptcha.reset(); // Reseta o reCAPTCHA
      }

      function limparErros() {
        mensagemContainer.innerHTML = '';
        emailInput.classList.remove('input-erro');
        passwordInput.classList.remove('input-erro');
      }
    });
  </script>

</body>
</html>